@model ProvaTecnica.Models.PerfilFuncionalidade

@{
    ViewData["Title"] = "Create";
}

<h1>Novo</h1>

<h4>Vínculo Perfil &Aacute; Funcionalidade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Perfil" class="control-label"></label>
                <select asp-for="PerfilId" class ="form-control" asp-items="ViewBag.PerfilId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Funcionalidade" class="control-label"></label>
                <select asp-for="FuncionalidadeId" class ="form-control" asp-items="ViewBag.FuncionalidadeId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
