@model IEnumerable<ProvaTecnica.Models.PerfilFuncionalidade>

@{
    ViewData["Title"] = "Index";
}

<br />
<h3>Vínculos Perfil & Funcionalidade</h3>
<br />
<p>
    <a asp-action="Create">Novo vínculo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Perfil)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Funcionalidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Perfil.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Funcionalidade.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
